= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form|
  = form.text_field :keyword, placeholder: "Search for posts", class: "search-input"
  = form.submit "Search", class: "search-btn"
.contents
  - @posts.each do |post|
    .content
      .content__left
        = image_tag "#{post.user.image}"
      .content__right
        .content__right__top
          = link_to post.title, post_path(post.id), class: "posttitle"
        .content__right__bottom
          = link_to "@#{post.user.nickname}", user_path(post.user), class: "content__right__bottom--userName--btn"
          .content__right__bottom--date
            = post.created_at.strftime('%Y/%m/%d %H:%M') 
          -# %i.far.fa-thumbs-up
          -# %i.far.fa-comment
  .pagination-box
    = paginate(@posts)