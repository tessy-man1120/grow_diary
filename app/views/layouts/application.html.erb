<!DOCTYPE html>
<html>
  <head>
    <title>GrowDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header class="header">
      <div class="header__title">
        <%= link_to "MY GROW DIARY", root_path, class: "header__title--text" %>
      </div>
      <div class="header__right">
      <% if user_signed_in? %>
          <%= link_to "NEWPOST", new_post_path, class: "header__right--btn" %>
          <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "header__right--btn" %>
        <% else %>
        <%= link_to "LOGIN", new_user_session_path, class: "header__right--btn" %>
        <%= link_to "CREATE ACCOUNT", new_user_registration_path, class: "header__right--btn" %>
        <% end %>
      </div>
    </header>
    <div class="contents">
      <%= yield %>
    </div>
  </body>
</html>
